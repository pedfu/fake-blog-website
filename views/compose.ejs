<%- include("partials/header") -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input class="form-control" type="text" name="postTitle" required active>
  </div>

  <div class="form-group">
    <label for="postContent">Post</label>
    <textarea class="form-control" name="postContent" rows="4" required></textarea>
  </div>

  <button type="submit" class="btn btn-primary mb-3" name="publish">Publish</button>
</form>

<%- include("partials/footer") -%>
